= content_for :css_includes do
  = stylesheet_link_tag 'blog/form'

= form_for @post do |f|
  - if @post.errors.any?
    %h2 При заполнении формы возникли ошибки. Проверьте следующие поля:
    %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :title, 'Название статьи:'
    = f.text_field :title

  .field
    = f.label :content, 'Текст статьи:'
    = f.text_area :content

  - button_name = controller.action_name == 'new' ? 'Добавить статью' : 'Сохранить'

  = f.submit button_name, class: "btn btn-large btn-info"
