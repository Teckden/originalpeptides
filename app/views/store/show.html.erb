<p id="notice"><%= notice %></p>

<div class="show_product">
  <%= image_tag(@product.assets.last.image.url(:thumb)) %>
  <h3><%= @product.title %></h3>
  <div class="to_the_left">
    <div>Производитель: <%= @product.producer %> </div>
    <div>Модель: <%= @product.title %></div>
    <div>
      Наличие: <%= @product.available ? "Есть в наличии" : "Нет в наличии" %>
    </div>
  </div><!-- close #to_the_left -->
  <div class="to_the_right">
    <span class="price">Цена: <%= number_to_currency(@product.price, unit: "грн.", format: "%n %u") %></span>
    <br/>
    <%= button_to 'Добавить в Корзину', cart_products_path(product_id: @product), class: "btn btn-primary" %>
  </div>
  <ul>
    <% (@assets.count-1).times do |asset_id| %>
      <li><%= link_to image_tag(@assets[asset_id].image), @assets[asset_id].image.url(:large), rel: "lightbox[photo]" %></li>
    <% end %>
  </ul>
  <div class="description">
    <p><%= @product.description.html_safe %></p>
  </div>
</div>

<%= javascript_include_tag "lightbox.js" %>
